{{> header}}

{{#if succMsg}}
<p class="alert alert-success">{{succMsg}}</p>
{{/if}}
{{#if errMsg}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>{{errMsg}}</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<form action="/user/signup_post" method="post">
    <div class="container my-3 border bg-secondary">
        <div class="my-3">
            <h2 class="text-center bg-info col-md-6">Customer Registration Page</h2>
        </div>
        <div class="my-3">
            <label for="">Full Name</label>
            <div>
                <input type="text" name="name" placeholder="Enter your Full name" class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Email</label>
            <div>
                <input type="text" name="email" placeholder="Enter your Email" class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Password</label>
            <div>
                <input type="password" name="pass" placeholder="Enter your password" class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Confirm Password</label>
            <div>
                <input type="password" name="cpass" placeholder="ReEnter your password"class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Address</label>
            <div>
                <input type="text" name="address" placeholder="Enter your city" class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Contact</label>
            <div>
                <input type="text" name="contact" placeholder="Enter your Mobile number" class="form-control">
            </div>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto my-3">
            <input type="submit" value="Submit" class="form-control btn btn-outline-info">
        </div>
    </div>

</form>


{{> footer}}