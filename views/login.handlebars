{{> header}}

{{#if succMsg}}
<p class="alert alert-success">{{succMsg}}</p>
{{/if}}
{{#if errMsg}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>{{errMsg}}</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<form action="/user/login_post" method="post">
    <div class="container my-3 border bg-secondary">
        <div class="my-3">
            <h2 class="text-center bg-info col-md-4">Customer Login Page</h2>
        </div>
        <div class="my-3">
            <label for="">Email</label>
            <div>
                <input type="text" name="email" placeholder="Enter your Email Id" class="form-control">
            </div>
        </div>
        <div class="my-3">
            <label for="">Password</label>
            <div>
                <input type="password" name="pass" placeholder="Enter your password" class="form-control">
            </div>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto my-3">
            <input type="submit" value="Login" class="form-control btn btn-outline-info">
        </div>
    </div>
</form>

{{> footer}}